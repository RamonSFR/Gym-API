generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Employee {
  id        Int      @id @default(autoincrement())
  name      String
  role      String
  cpf       String   @unique
  wage      Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  workouts Workout[]

  @@map("employees")
}

model Member {
  id  Int @id @default(autoincrement())
  name String
  membership String
  cpf String @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  workouts Workout[]

  @@map("members")
}

model Workout {
  id Int @id @default(autoincrement())
  exercises Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  personalId Int
  memberId Int

  personal Employee @relation(fields: [personalId], references: [id])
  member Member @relation(fields: [memberId], references: [id])

  @@map("workout")
}
